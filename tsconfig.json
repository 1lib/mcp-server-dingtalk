{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}